<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:dependency="pref_units"
        android:key="pref_units"
        android:title="@string/pref_title_units"
        android:dialogTitle="@string/pref_title_units"
        android:entries="@array/pref_units_titles"
        android:entryValues="@array/pref_units_values"
        android:defaultValue="0" />

    <ListPreference
        android:dependency="pref_bar_weight"
        android:key="pref_bar_weight"
        android:title="@string/pref_title_bar"
        android:dialogTitle="@string/pref_title_bar"
        android:entries="@array/pref_bar_selection"
        android:entryValues="@array/pref_bar_values"
        android:defaultValue="0" />

</PreferenceScreen>
